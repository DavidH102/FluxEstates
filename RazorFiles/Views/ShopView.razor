<MudItem Class="pa-2 ma-2 w-25">
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@CardTitle</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudText>This day everything happend.</MudText>
            <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
        </MudCardActions>
    </MudCard>
</MudItem>
@code {
    [Parameter]
    public Shop CurrentShop { get; set; }
    [Parameter]
    public string? CardTitle { get; set; }

    // Set a default value in the component's code block or constructor
    protected override void OnInitialized()
    {
        if (CardTitle == null)
        {
            CardTitle = "Header";
        }
    }
}
