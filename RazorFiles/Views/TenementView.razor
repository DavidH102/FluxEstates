    <MudItem Class="pa-2 ma-2 w-25">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">@CardTitle</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
            <MudSlider @bind-Value="CurrentTenement.NumOfFloors" Step="1" Min="1" Max="8" Color="Color.Info"> Number of Floors: @CurrentTenement.NumOfFloors.ToString()</MudSlider>            
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
@code {  
    [Parameter]
    public Tenement CurrentTenement { get; set; }
    [Parameter]
    public string? CardTitle { get; set; }

    // Set a default value in the component's code block or constructor
    protected override void OnInitialized()
    {
        if (CardTitle == null)
        {
            CardTitle = "Header";
        }
    }
}
