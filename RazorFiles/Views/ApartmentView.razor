<MudItem Class="pa-2 ma-2 w-25">
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@CardTitle</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudSlider @bind-Value="CurrentApartment.NumRooms" Min="1" Max="10" Color="Color.Info">Number Of Rooms: @CurrentApartment.NumRooms.ToString()</MudSlider>
          
        </MudCardContent>
      
    </MudCard>
</MudItem>
@code {
    [Parameter]
    public Apartment CurrentApartment { get; set; }

    [Parameter]
    public string? CardTitle { get; set; }

    // Set a default value in the component's code block or constructor
    protected override void OnInitialized()
    {
        if (CardTitle == null)
        {
            CardTitle = "Header";
        }
    }
}